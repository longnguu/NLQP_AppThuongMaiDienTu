<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginVertical="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/locb"
        android:layout_width="50dp"
        android:layout_marginVertical="10dp"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/checkboxCartt"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_toRightOf="@+id/locb"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgCartt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameCartt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tênn"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/giaCartt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="GIÁ"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto"/>
            <LinearLayout
                android:id="@+id/loslg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motaSPDetail"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_removeCartt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/yellow_pri"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_remove" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/edt_slCartt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingHorizontal="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_plusCartt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/yellow_pri"
                    app:cardCornerRadius="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_add_24" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/btn_delCartt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_del"
            android:layout_weight="5"/>

    </LinearLayout>


</RelativeLayout>